def make_juice(fruit):            
  return f"{fruit}+ğŸ§‹"                # return ì„ ì“°ë©´ Python ì´ ì‹¤í–‰ì‹œí‚¬ ë§ˆì§€ë§‰ code ê°€ ë˜ë²„ë¦°ë‹¤
  print("lalalala")              

def add_ice(juice):
  return f"{juice}+ğŸ§Š"

def add_sugar(iced_juice):
  return f"{iced_juice}+ğŸ¬"

juice = make_juice("ğŸ")                # Python ì€ í•´ë‹¹ function ì´ ë¶ˆë¦° ì´ ê³³ìœ¼ë¡œ ëŒì•„ê°„ë‹¤
