def add_ice(juice):                   # ì´ function ì€ juice ë¥¼ ë°›ì•„ì„œ juice ì™€ ì–¼ìŒì„ return 
  return f"{juice}+ğŸ§Š"                 

def add_sugar(iced_juice):            # ì´ function ì€ iced_juice ë¥¼ ë°›ì•„ì„œ iced_juice ì™€ sugar ë¥¼ return
  return f"{iced_juice}+ğŸ¬"

