my_name = student  # 코드를 실행하면 에러
                   # 파이썬은 hoppang 이 variable 로 인식
                   # 하지만 hoppang 은 어디에도 variable 을 만들지 않았음
                   # 그래서 에러가 발생


my_name = "student" # python 에게 hoppang 이 아닌 my_name 이 variable 이라고
                    # 알려준다 
print(my_name)


# 파이썬에게 student 이 아닌 my_name 이 variable 이라고 알려주는 방법

my_name = "student" # my_name variable 이 student 라는 문자열이 되었

print(my_name)      # 이제 python 은 student 가 variable 이라는 것을 알게 되어
                    # 정상적인 출력이 된다. 이게 바로 "데이터 타입"이다


# variable 안에 어떤 타입의 언어를 넣을 수 있을까?
# 프로그래밍 언어는 어떤 타입을 지원할까?

my_name = "12"      # "" (따옴표) 로 감싸면 문자가 된다
                    # 숫자든 문자든 따옴표로 감싸면 문자가 된다
print(my_name)


# boolean 숫자도 String(문자) 도 아니다
# 이 데이터 타입은 true, false 를 나타낸다. 이진법에서는 0, 1

my_name = True  # True, False 라고 적으면 된다
                # True 의 T, False 의 F 는 항상 대문자

dead = "False"  # "" 로 감싸면 String(문자)
dead = False    # 기계적인 False 의 뜻을 가진다. 0 이고 off 를 뜻한
                # 0 = OFF / 1 = ON
                # True 가 아닌것이다
